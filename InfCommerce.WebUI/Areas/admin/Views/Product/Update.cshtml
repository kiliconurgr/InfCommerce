	@model ProductVM
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ürün Güncelle</h2>

                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form enctype="multipart/form-data" asp-action="Update" data-parsley-validate class="form-horizontal form-label-left">
                             <input asp-for="@Model.Product.ID" type="hidden">
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Name">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Product.Name" class="form-control"><span style="color:red" asp-validation-for="@Model.Product.Name"></span>
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Description">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Product.Description" class="form-control ">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Detail">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input class="form-control ">
<textarea asp-for="@Model.Product.Detail" class="editor" rows="10" cols="80"></textarea>

                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Price">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Product.Price" class="form-control ">
                                </div>
                            </div>
                              <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.DiscountPrice">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Product.DiscountPrice" class="form-control ">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Currency">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                   <select asp-for="@Model.Product.Currency" class="form-control" asp-items="@Html.GetEnumSelectList<ECurrency>()"></select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.Stock">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Product.Stock" class="form-control ">
                                </div>
                            </div>
                              <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Product.BrandID">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                   <select asp-for="@Model.Product.BrandID" class="form-control" asp-items="@Model.Brands.Select(s=>new SelectListItem{Value=s.ID.ToString(),Text=@s.Name})"></select>
                                </div>
                            </div>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <a class="btn btn-primary" asp-action="Cancel">İptal</a>
                                    <button class="btn btn-primary" type="reset">Temizle</button>
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
@section customScript{
     <script src="/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace($(".editor").attr("id"));
    </script>
}